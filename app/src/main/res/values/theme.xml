<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TrainingLab.DayNight" parent="Base.TrainingLab">
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_surface</item>
        <item name="android:navigationBarColor">@color/color_surface</item>
    </style>

    <style name="Base.TrainingLab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Material color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.CodeLab.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.CodeLab.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.CodeLab.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.CodeLab.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.CodeLab.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CodeLab.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CodeLab.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.CodeLab.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CodeLab.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CodeLab.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.CodeLab.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CodeLab.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.CodeLab.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.CodeLab.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.CodeLab.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.CodeLab.LargeComponent
        </item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.TrainingLab.BottomSheetDialog
        </item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>

        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?colorControlHighlight
        </item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>

        <item name="alphaEmphasisHigh">@dimen/alpha_emphasis_high</item>
        <item name="alphaEmphasisMedium">@dimen/alpha_emphasis_medium</item>
        <item name="alphaEmphasisDisabled">@dimen/alpha_emphasis_disabled</item>

        <!-- Custom attributes -->
        <item name="bottomNavigationSize">@dimen/bottom_navigation_size</item>
        <item name="statusBarSize">@dimen/status_bar_size</item>

    </style>


</resources>